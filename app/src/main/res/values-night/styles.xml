<?xml version="1.0" encoding="utf-8"?><!-- list_style.xml -->
<resources>
    <!-- Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/e_spinner_close</item>
        <item name="android:popupBackground">@drawable/e_spinner_open</item>
    </style>

    <!-- Estilo de TextField -->
    <style name="TextField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/e_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <!-- Estilo de BotÃ³n de Google -->
    <style name="MyButtonStyle">
        <item name="android:maxHeight">100dp</item>
        <item name="android:maxWidth">100dp</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyCardsViews">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <!-- Styles TextViews -->
    <style name="MyTitleTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">2.5dp</item>F
    </style>

    <style name="MyBodyTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:paddingVertical">2.5dp</item>
    </style>
</resources>
